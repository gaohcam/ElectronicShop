@model ElectronicShop_Model.Categories.CategoryInput

@{
	ViewData["Title"] = "Cập nhật danh mục";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
	<script type="text/javascript">
		$('#submit').click(function () {
			$('form').submit();
		});
	</script>
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">Danh mục</h1>
				</div><!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
						<li class="breadcrumb-item active">Cập nhật danh mục</li>
					</ol>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</div>
	<section class="content">
		<div class="container-fluid">
			<div class="card mb-12">
				<div class="card-body">
					<div class="row">
						<h4 class="mr-auto">Cập nhật danh mục</h4>
						<button class="btn btn-primary" id="submit">Xác nhận</button>
					</div>
					<hr />
					<form asp-action="Edit" enctype="multipart/form-data" method="post">
						<input asp-for="CategoryId" type="hidden" name="CategoryId" value="@Model.CategoryId" />
						<dl class="row">
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.CategoryId)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.CategoryId)
							</dd>
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.CategoryName)
							</dt>
							<dd class="col-sm-10">
								@Html.TextBoxFor(model => model.CategoryName)
							</dd>
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.DateCreated)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.DateCreated)
							</dd>
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.DateChanged)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.DateChanged)
							</dd>
							<dt class="col-sm-2">
								@Html.DisplayNameFor(model => model.UserChanged)
							</dt>
							<dd class="col-sm-10">
								@Html.DisplayFor(model => model.UserChanged)
							</dd>
						</dl>
					</form>
				</div>
			</div>
			<div>
				<a asp-action="Index">Danh sách danh mục</a>
			</div>
		</div>
	</section>
</div>