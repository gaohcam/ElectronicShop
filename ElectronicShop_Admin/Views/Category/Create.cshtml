@model ElectronicShop_Model.Categories.CategoryInput

@{
	ViewData["Title"] = "Tạo mới danh mục";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
	<section class="content">
		<div class="container-fluid">
			<h1>Quản lý danh mục</h1>

			<h4>Tạo danh mục</h4>
			<hr />
			<div class="card mb-2">
				<div class="card-body">
					<div class="row">
						<div class="col-md-4">
							<form asp-action="Create" asp-controller="Category" enctype="multipart/form-data" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="form-group">
									<label asp-for="CategoryName" class="control-label"></label>
									<input asp-for="CategoryName" class="form-control" />
									<span asp-validation-for="CategoryName" class="text-danger"></span>
								</div>
								<div class="form-group">
									<input type="submit" value="Tạo mới" class="btn btn-primary" />
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<div>
				<a asp-action="Index">Trở về trang chủ</a>
			</div>
		</div>
	</section>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
