@model ElectronicShop_Model.Categories.CategoryInput

@{
	ViewData["Title"] = "Chi tiết thông tin danh mục";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
	<script type="text/javascript">
		$('#delete').click(function () {
			Swal.fire({
				title: 'Bạn chắc chắn muốn xóa?',
				text: "Bạn sẽ không thể hoàn tác tác vụ này!",
				icon: 'warning',
				showCancelButton: true,
				confirmButtonColor: '#3085d6',
				cancelButtonColor: '#d33',
				cancelButtonText: "Hủy",
				confirmButtonText: 'Vâng, tôi muốn xóa!'
			}).then((result) => {
				if (result.isConfirmed) {
					$.ajax({
						url: '/Category/Delete/@Model.CategoryId',
						method: 'POST',
						success: function(res) {
							Swal.fire({
								title: 'Đã xóa!',
								text: 'Danh mục của bạn đã được xóa.',
								icon: 'success',
								confirmButtonText: 'Xác nhận'
							}).then(() => {
								window.location.href = res
							})
							
						}
					})
				}
			})
		});
	</script>
}

<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0">Danh mục</h1>
				</div><!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
						<li class="breadcrumb-item active">Chi tiết danh mục</li>
					</ol>
				</div><!-- /.col -->
			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</div>
	<section class="content">
		<div class="container-fluid">
			<div class="card mb-12">
				<div class="card-body">
					<div class="row d-flex">
						<h4 class="mr-auto">Chi tiết thông tin danh mục</h4>
						<a role="button" class="mr-2 btn btn-primary" asp-action="Edit" asp-route-categoryId="@Model.CategoryId" >Cập nhật</a>
						<a role="button" class="btn btn-danger" id="delete">Xóa</a>
					</div>
					<hr />
					<dl class="row">
						<dt class="col-sm-2">
							@Html.DisplayNameFor(model => model.CategoryId)
						</dt>
						<dd class="col-sm-10">
							@Html.DisplayFor(model => model.CategoryId)
						</dd>
						<dt class="col-sm-2">
							@Html.DisplayNameFor(model => model.CategoryName)
						</dt>
						<dd class="col-sm-10">
							@Html.DisplayFor(model => model.CategoryName)
						</dd>
						<dt class="col-sm-2">
							@Html.DisplayNameFor(model => model.DateCreated)
						</dt>
						<dd class="col-sm-10">
							@Html.DisplayFor(model => model.DateCreated)
						</dd>
						<dt class="col-sm-2">
							@Html.DisplayNameFor(model => model.DateChanged)
						</dt>
						<dd class="col-sm-10">
							@Html.DisplayFor(model => model.DateChanged)
						</dd>
						<dt class="col-sm-2">
							@Html.DisplayNameFor(model => model.UserChanged)
						</dt>
						<dd class="col-sm-10">
							@Html.DisplayFor(model => model.UserChanged)
						</dd>
					</dl>
				</div>
			</div>
			<div>
				<a asp-action="Index">Danh sách danh mục</a>
			</div>
		</div>
	</section>
</div>